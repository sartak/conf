[user]
  name = Shawn M Moore
  email = code@sartak.org
[core]
  whitespace=-blank-at-eof
  pager=delta
[commit]
  verbose=true
[alias]
  pr = "!perl -e '$origin = `git remote get-url origin`; $origin =~ s!^git\\@github.com:(.*)\\.git$!! or exit; $branch = `git rev-parse --abbrev-ref HEAD`; system qq{open https://github.com/$1/pull/new/$branch}'"
  ship = !git push -fu origin HEAD && git pr
  un-amend = reset --mixed HEAD@{1}
[pull]
  rebase = false
  ff = only
[rebase]
  autoStash = true
[init]
  defaultBranch = master
[merge]
  conflictstyle = zdiff3
[advice]
  statusHints = false
[interactive]
  singlekey = true
  diffFilter = delta --color-only
[delta]
  navigate = true
  line-numbers = true
  hyperlinks = true
  theme = Monokai Extended Bright
  zero-style = dim syntax
[diff]
  colorMoved = default
[github]
  user = sartak
[url "git@github.com:"]
	insteadOf = https://github.com/
[include]
  path = "~/.local/gitconfig"

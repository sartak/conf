[core]
  whitespace=-blank-at-eof
  pager=delta
[commit]
  verbose=true
[alias]
  ship = "!git push -fu origin HEAD && perl -e '$origin = `git remote get-url origin`; $origin =~ s!^git\\@github.com:(.*)\\.git$!! or exit; $branch = `git rev-parse --abbrev-ref HEAD`; system qq{open https://github.com/$1/pull/new/$branch}'"
[pull]
  rebase = false
  ff = only
[rebase]
  autoStash = true
[init]
  defaultBranch = master
[merge]
  conflictstyle = zdiff3
[advice]
  statusHints = false
[interactive]
  singlekey = true
  diffFilter = delta --color-only
[delta]
  navigate = true
  line-numbers = true
  hyperlinks = true
[diff]
  colorMoved = default

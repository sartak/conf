{
  "coc.preferences.formatOnSaveFiletypes": ["*"],
  "eslint.autoFixOnSave": true,

  "snippets.extends": {
    "javascriptreact": ["javascript"],
    "typescript": ["javascript"],
    "typescriptreact": ["typescript", "javascriptreact"]
  },
  "snippets.excludePatterns": ["$HOME/.config/coc/extensions/node_modules/**"],
  "snippet.highlight": true,
  "coc.preferences.nextPlaceholderOnDelete": true,
  "snippet.nextPlaceholderOnDelete": true,

  "colors.filetypes": ["css", "html"],

  "javascript.disableProgressNotifications": true,
  "typescript.disableProgressNotifications": true,
  "rust-analyzer.disableProgressNotifications": true,
  "go.disableProgressNotifications": true,
  "rust-analyzer.updates.prompt": false,
  "notification.disabledProgressSources": ["*"],

  "sql.formatOptions": {
    "linesBetweenQueries": 2
  },

  "javascript.suggest.autoImports": true,
  "typescript.suggest.autoImports": true,
  "javascript.autoClosingTags": false,
  "typescript.autoClosingTags": false,

  "diagnostic.refreshOnInsertMode": true,
  "inlayHint.refreshOnInsertMode": true,

  "typescript.inlayHints.variableTypes.enabled": false,
  "typescript.inlayHints.parameterNames.enabled": "none",
  "typescript.inlayHints.parameterTypes.enabled": false,
  "typescript.inlayHints.enumMemberValues.enabled": false,
  "typescript.inlayHints.functionLikeReturnTypes.enabled": false,
  "typescript.inlayHints.propertyDeclarationTypes.enabled": false,
  "typescript.inlayHints.parameterNames.suppressWhenArgumentMatchesName": false,
  "javascript.inlayHints.variableTypes.enabled": false,
  "javascript.inlayHints.parameterNames.enabled": "none",
  "javascript.inlayHints.parameterTypes.enabled": false,
  "javascript.inlayHints.enumMemberValues.enabled": false,
  "javascript.inlayHints.functionLikeReturnTypes.enabled": false,
  "javascript.inlayHints.propertyDeclarationTypes.enabled": false,
  "javascript.inlayHints.parameterNames.suppressWhenArgumentMatchesName": false,
  "rust-analyzer.inlayHints.enable": false,
  "go.goplsOptions": {
    "hints": {
      "assignVariableTypes": false,
      "compositeLiteralFields": false,
      "compositeLiteralTypes": false,
      "constantValues": false,
      "functionTypeParameters": false,
      "parameterNames": false,
      "rangeVariableTypes": false
    },
    "usePlaceholders": true
  }
}
